{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es7",
            "es2015.promise",
            "dom"
        ],
        "module": "amd",
        "moduleResolution": "node",
        "newLine": "LF",
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "outDir": "./src/FileCabinet/SuiteScripts/netsuite-typescript-sdf",
        "paths": {
            "N": ["node_modules/@hitc/netsuite-types/N"],
            "N/*": ["node_modules/@hitc/netsuite-types/N/*"]
        },
        "sourceMap": false,
        "target": "es2020"
    },
    "include": ["."],
    "exclude": ["node_modules"]
}